<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left"/>

        <ImageView
            android:id="@+id/off_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/back_view"
            android:src="@drawable/ic_circle" />
        <ImageView
            android:id="@+id/on_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_view"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/naviagtion_currentlocationSpinner"
            android:src="@drawable/ic_circle_filled"/>
        <Spinner
            android:id="@+id/naviagtion_currentlocationSpinner"
            style="@style/mySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:padding="5dp"
            android:layout_toRightOf="@id/off_view"
            android:layout_toLeftOf="@id/swap_view"
            android:background="@drawable/spinner_background"
            />
        <Spinner
            android:id="@+id/naviagtion_destinationSpinner"
            style="@style/mySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_toRightOf="@id/on_view"
            android:layout_toLeftOf="@id/swap_view"
            android:background="@drawable/spinner_background"
            android:layout_below="@id/naviagtion_currentlocationSpinner"/>
        <ImageView
            android:id="@+id/swap_view"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_swap"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_view"
        android:layout_below="@id/spinner_layout">
        <ImageView
            android:id="@+id/mapTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/floormap"/>
        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:src="@drawable/floorplans"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/uc"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>